<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    style="@style/mainLayoutMargin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SummonElementalActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        
        
    	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100" >

                <TextView
                    android:id="@+id/summonElementalTextCharacterName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="@string/str_TextCharacterName"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/summonElementalCharacterName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                

                <TextView
                    android:id="@+id/textAttributes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_Attributes"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="50"
                        android:baselineAligned="true"
                        android:weightSum="100" >

                        <TextView
                            android:id="@+id/summonElementalTextStatCourage"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="35"
                            android:text="@string/str_StatCourage"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/summonElementalEditStatCourage"
                            style="@style/styleEditDecimal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="65"
                            android:ems="10"
                            android:inputType="number"
                            android:nextFocusDown="@+id/summonElementalEditStatWisdom"
                            android:nextFocusRight="@+id/summonElementalEditStatWisdom" >

                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="50"
                        android:weightSum="100" >

                        <TextView
                            android:id="@+id/summonElementalTextStatWisdom"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="35"
                            android:text="@string/str_StatWisdom"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/summonElementalEditStatWisdom"
                            style="@style/styleEditDecimal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="65"
                            android:ems="10"
                            android:inputType="number"
                            android:nextFocusDown="@+id/summonElementalEditStatCharisma"
                            android:nextFocusLeft="@id/summonElementalEditStatCourage"
                            android:nextFocusRight="@+id/summonElementalEditStatCharisma"
                            android:nextFocusUp="@id/summonElementalEditStatCourage" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="50"
                        android:baselineAligned="true"
                        android:weightSum="100" >

                        <TextView
                            android:id="@+id/summonElementalTextStatCharisma"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="35"
                            android:text="@string/str_StatCharisma"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/summonElementalEditStatCharisma"
                            style="@style/styleEditDecimal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="65"
                            android:ems="10"
                            android:inputType="number"
                            android:nextFocusDown="@+id/summonElementalEditStatIntuition"
                            android:nextFocusLeft="@id/summonElementalEditStatWisdom"
                            android:nextFocusRight="@+id/summonElementalEditStatIntuition"
                            android:nextFocusUp="@id/summonElementalEditStatWisdom" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="50"
                        android:baselineAligned="true"
                        android:weightSum="100" >

                        <TextView
                            android:id="@+id/summonElementalTextStatIntuition"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="35"
                            android:text="@string/str_StatIntuition"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/summonElementalEditStatIntuition"
                            style="@style/styleEditDecimal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="65"
                            android:ems="10"
                            android:inputType="number"
                            android:nextFocusDown="@+id/summonElementalEditTalentCallElementalServant"
                            android:nextFocusLeft="@id/summonElementalEditStatCharisma"
                            android:nextFocusRight="@+id/summonElementalEditTalentCallElementalServant"
                            android:nextFocusUp="@id/summonElementalEditStatCharisma" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		        <View
                    android:id="@+id/View04"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/darker_gray" />
		        <TextView
		            android:id="@+id/TextView01"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/str_SelectSummoning"
		            android:textAppearance="?android:attr/textAppearanceLarge" />
		
		        <RadioGroup
		            android:id="@+id/typeOfSummon"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >
		
		            <RadioButton
		                android:id="@+id/radioElementalServant"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:checked="true"
		                android:text="@string/str_ElementalServant" />
		
		            <RadioButton
		                android:id="@+id/radioDjinn"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/str_Djinn" />
		
		            <RadioButton
		                android:id="@+id/radioMasterOfElement"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/str_MasterOfElement" />
		
		        </RadioGroup>
		
		    </LinearLayout>
		    
		    <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:weightSum="100" >
	
	            <TextView
	                android:id="@+id/summonElementalTextTalentCallElementalServant"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="35"
	                android:text="@string/str_TalentCallElementalServant"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textSize="16sp" />
	
	            <EditText
	                android:id="@+id/summonElementalEditTalentCallElementalServant"
		            android:nextFocusUp="@id/summonElementalEditStatIntuition"
		            android:nextFocusLeft="@id/summonElementalEditStatIntuition"
		            android:nextFocusDown="@+id/summonElementalEditTalentCallDjinn"
		            android:nextFocusRight="@+id/summonElementalEditTalentCallDjinn"
	                style="@style/styleEditDecimal"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="65"
	                android:ems="10"
	                android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100" >

                <TextView
                    android:id="@+id/summonElementalTextTalentCallDjinn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="@string/str_TalentCallDjinn"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/summonElementalEditTalentCallDjinn"
	                android:nextFocusUp="@id/summonElementalEditTalentCallElementalServant"
	                android:nextFocusLeft="@id/summonElementalEditTalentCallElementalServant"
	                android:nextFocusDown="@+id/summonElementalEditTalentCallMasterOfElement"
	                android:nextFocusRight="@+id/summonElementalEditTalentCallMasterOfElement"
                    style="@style/styleEditDecimal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100" >

                <TextView
                    android:id="@+id/summonElementalTextTalentCallMasterOfElement"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:text="@string/str_TalentCallMasterOfElement"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/summonElementalEditTalentCallMasterOfElement"
	                android:nextFocusUp="@id/summonElementalEditTalentCallDjinn"
	                android:nextFocusLeft="@id/summonElementalEditTalentCallDjinn"
		            android:nextFocusDown="@+id/summonElementalEditKnowledgeDemonic"
		            android:nextFocusRight="@+id/summonElementalEditKnowledgeDemonic"
                    style="@style/styleEditDecimal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:id="@+id/View02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/summonElementalTextKnowledgeOfAttribute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_KnowledgeOfAttribute"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:weightSum="100" >

                    <CheckBox
                        android:id="@+id/summonElementalCheckBoxKnowledgeFire"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="@string/str_ElementFire" />

                    <CheckBox
                        android:id="@+id/summonElementalCheckBoxKnowledgeWater"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="@string/str_ElementWater" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:weightSum="100" >

                    <CheckBox
                        android:id="@+id/summonElementalCheckBoxKnowledgeLife"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="@string/str_ElementLife" />

                    <CheckBox
                        android:id="@+id/summonElementalCheckBoxKnowledgeIce"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="@string/str_ElementIce" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:weightSum="100" >

                    <CheckBox
                        android:id="@+id/summonElementalCheckBoxKnowledgeStone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="@string/str_ElementStone" />

                    <CheckBox
                        android:id="@+id/summonElementalCheckBoxKnowledgeAir"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="@string/str_ElementAir" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100" >

                    <TextView
                        android:id="@+id/summonElementalTextKnowledgeDemonic"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="35"
                        android:text="@string/str_KnowledgeDemonic"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/summonElementalEditKnowledgeDemonic"
	                    android:nextFocusUp="@id/summonElementalEditTalentCallMasterOfElement"
	                    android:nextFocusLeft="@id/summonElementalEditTalentCallMasterOfElement"
	                    android:nextFocusDown="@+id/summonElementalEditStrengthOfStigma"
	                    android:nextFocusRight="@+id/summonElementalEditStrengthOfStigma"
                        style="@style/styleEditDecimal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="65"
                        android:ems="10"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:id="@+id/View03"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/summonElementalTextSpecialAttributes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_SpecialCharacteristics"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:weightSum="100" >

                    <CheckBox
                        android:id="@+id/summonElementalCheckBoxDemonicCovenant"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_DemonicCovenant" />
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true"
                    android:weightSum="100" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true"
                    android:weightSum="100" >

                    <TextView
                        android:id="@+id/summonElementalTextStrengthOfStigma"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="35"
                        android:text="@string/str_StrengthOfStigma"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/summonElementalEditStrengthOfStigma"
	                    android:nextFocusUp="@id/summonElementalEditKnowledgeDemonic"
	                    android:nextFocusLeft="@id/summonElementalEditKnowledgeDemonic"
                        style="@style/styleEditDecimal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="65"
                        android:ems="10"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>
            
            
		    <LinearLayout
		        android:id="@+id/LinearLayoutElementSpinners"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		
		        <View
		            android:id="@+id/View05"
		            android:layout_width="match_parent"
		            android:layout_height="1dp"
		            android:layout_marginBottom="16dp"
		            android:layout_marginTop="16dp"
		            android:background="@android:color/darker_gray" />
		
		        <LinearLayout
		            android:id="@+id/LinearLayoutElementSpinners2"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:weightSum="100" >
		            
		        <TextView
		            android:id="@+id/textElement"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="50"
		            android:text="@string/str_Element"
		            android:layout_gravity="center_vertical"
		            android:textAppearance="?android:attr/textAppearanceLarge" />
		
		        <Spinner
		            android:id="@+id/spinnerTypeOfElement"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="50"
		            android:entries="@array/str_ElementsArray"
		            android:prompt="@string/str_ElementsPrompt" />
		
		        </LinearLayout>
		
		        <TextView
		            android:id="@+id/QualityOfMaterial"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/str_QualityOfMaterial"
		            android:textAppearance="?android:attr/textAppearanceLarge" />
		
		        <Spinner
		            android:id="@+id/spinnerChooseQualityOfMaterial"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />
		
		    </LinearLayout>
		    
		    <View
	          android:id="@+id/View06"
	          android:layout_width="match_parent"
	          android:layout_height="1dp"
	          android:layout_marginBottom="16dp"
	          android:layout_marginTop="16dp"
	          android:background="@android:color/darker_gray" />

     		<LinearLayout
                 android:id="@+id/summonElementalLinearLayoutClassEquipBoxes"
        		 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >
                 <CheckBox
                    android:id="@+id/summonElementalCheckBoxEquipment1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_EquipmentMage1" />
                <CheckBox
                    android:id="@+id/summonElementalCheckBoxEquipment2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_EquipmentMage2" />

            </LinearLayout>		
		    <Spinner
		        android:id="@+id/spinner1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
		    </LinearLayout>
	</ScrollView>
</LinearLayout>
